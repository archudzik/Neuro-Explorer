<Window x:Class="Elliatab.Leap.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:w="clr-namespace:Elliatab.Leap.Sample"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Button Click="ButtonClick1" DockPanel.Dock="Top">OK</Button>
            <ListBox
                ItemsSource="{Binding}"
                w:ListBox.AutoScroll="True"
                DockPanel.Dock="Bottom"/>
        </DockPanel>
        
        
    </Grid>
</Window>
